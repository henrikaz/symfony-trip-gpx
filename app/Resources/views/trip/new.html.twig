{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="card card-container">

            <p class="h3">Make it! Your Trip :)</p>

            {{ form_start(form, {'attr': { 'class': 'custom-form' }}) }}

                {{ form_row(form.name) }}

                {{ form_row(form.file) }}

                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Save</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}